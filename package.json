{
  "name": "seller-erp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:vercel": "npm install --legacy-peer-deps && npm run db:generate && cd apps/web && npm run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "db:studio": "turbo run db:studio",
    "db:seed": "turbo run db:seed",
    "commit": "powershell -ExecutionPolicy Bypass -File ./auto-commit.ps1",
    "commit:watch": "powershell -ExecutionPolicy Bypass -File ./auto-commit.ps1 watch",
    "commit:message": "powershell -ExecutionPolicy Bypass -File ./auto-commit.ps1 -Message"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=6.0.0",
    "npm": ">=8.0.0"
  }
}

